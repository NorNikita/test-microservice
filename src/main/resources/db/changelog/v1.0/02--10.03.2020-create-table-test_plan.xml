<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="2" author="nikita nor ">
        <createTable tableName="test_plan">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="test_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="owner_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="jmx_uri" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="file_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="restriction_level" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="testing_tool" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="file_extension" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>